        <servlet-name>PrikazUtakmica</servlet-name>
        <servlet-class>ajax.PrikazUtakmica</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrikazVesti</servlet-name>
        <servlet-class>ajax.PrikazVesti</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrikazIgracaTabela</servlet-name>
        <servlet-class>ajax.PrikazIgracaTabela</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/fantasy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxKorisnickoImeValidacija</servlet-name>
        <url-pattern>/ajax/korisnickoIme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxNazivLigeValidacija</servlet-name>
        <url-pattern>/ajax/nazivLige</url-pattern>
