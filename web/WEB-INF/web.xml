    </servlet>
    <servlet>
        <servlet-name>AjaxFantasyTimValidacija</servlet-name>
        <servlet-class>ajax.FantasyTimValidacija</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>_RESTTest</servlet-name>
        <servlet-class>ajax.AdminUnosRasporeda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>_UnosRosteraAjax</servlet-name>
        <servlet-class>ajax.UnosRostera</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxOtkazIgrac</servlet-name>
        <servlet-class>ajax.OtkazIgrac</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxOdobriLigu</servlet-name>
